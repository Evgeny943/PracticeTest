@model BLL.DTO.TraineeDTO

@{
    ViewData["Title"] = "Create trainee";
}
<h3>@ViewData["Message"]</h3>


<form method="post" asp-action="Create" asp-controller="Trainee">
    <div>
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" />
        </div>
        <div>
            <label asp-for="Surname"></label>
            <input type ="text" asp-for="Surname" />
        </div>
        <div>
            <label asp-for="Gender"></label>
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<DAL.Models.Gender>()"></select>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input type="email" asp-for="Email" />
        </div>
        <div>
            <label asp-for="Phone"></label>
            <input type="text" asp-for="Phone" />
        </div>
        <div>
            <label asp-for="BirthDay"></label>
            <input type="datetime" asp-for="BirthDay" />
        </div>
        <div>
            <label asp-for="Direction"></label>
            <select asp-for="Direction" asp-items="ViewBag.Directions"></select>
        </div>
        <div>
            <label asp-for="Project"></label>
            <select asp-for="Project" asp-items="ViewBag.Projects"></select>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>